pipeline {

    agent any
    tools {
        maven 'MAVEN_HOME'
    }
    stages {
        stage('Clonerepo') {
            steps {
                git 'https://github.com/eazi-learn/DevOpsClassCodes.git'
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage(CodeReview) {
            agent any
            steps {
                sh 'mvn pmd:pmd'
            }
            post {
  success {
    recordIssues(tools: [pmdParser(pattern: '**/pmd.xml')])
  }
}
        }
        stage(UnitTesting){
            steps {
                sh 'mvn test'
            }
        }
        stage('Codecoverage'){
            steps {
               sh 'mvn verify'   
            }
        }
        stage('Package'){
            steps {
               sh 'mvn package'   
            }
        }
    }
}
